use CreativeDelta\User\Account\Form\RegisterForm;

/** @var RegisterForm $form */

$mUsername = $form->get(RegisterForm::ELEMENT_TXT_USERNAME);
$mUsername->setAttribute('class', 'form-control');
$mUsername->setAttribute('Placeholder', 'User name');

$mPassword = $form->get(RegisterForm::ELEMENT_TXT_PASSWORD);
$mPassword->setAttribute('class', 'form-control');
$mPassword->setAttribute('Placeholder', 'Password');

$mConfirmPassword = $form->get(RegisterForm::ELEMENT_TXT_CONFIRM_PASSWORD);
$mConfirmPassword->setAttribute('class', 'form-control');
$mConfirmPassword->setAttribute('Placeholder', 'Password');

$mResultMessages = $form->get(RegisterForm::ELEMENT_RESULT_MESSAGES);
$mResultMessages->setAttribute('class', 'label-warning');

echo $this->form()->openTag($form);
?>

    <div class="form-group">
        <?= $this->formLabel($mUsername) ?>
