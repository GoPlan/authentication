    </div>
    <div class="form-group">
        <?= $this->formLabel($mPassword) ?>
        <?= $this->formElement($mPassword) ?>
        <?= $this->formElementErrors()->render($mPassword, ['class' => 'help-block']) ?>
    </div>
    <div class="form-group">
        <?= $this->formLabel($mConfirmPassword) ?>
        <?= $this->formElement($mConfirmPassword) ?>
        <?= $this->formElementErrors()->render($mConfirmPassword, ['class' => 'help-block']) ?>
    </div>
    <div class="form-group">
        <label class="label label-warning"><?= $form->get(RegisterForm::ELEMENT_RESULT_MESSAGES)->getValue() ?></label>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>

<?php
echo $this->form()->closeTag();
